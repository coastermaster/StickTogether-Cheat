javascript:(function(){
  function e() {
    const t = document.querySelectorAll('.active');
    if (t.length === 0) {
      return void clearInterval(n);
    }
    t.forEach(o => {
      setTimeout(() => {
        const boundingRect = o.getBoundingClientRect();
        const left = boundingRect.left;
        const width = boundingRect.width;
        const top = boundingRect.top;
        const height = boundingRect.height;
        const centerX = left + width / 2;
        const centerY = top + height / 2;
        const mouseDownEvent = new MouseEvent('mousedown', {
          view: window,
          bubbles: true,
          cancelable: true,
          clientX: centerX,
          clientY: centerY
        });
        document.elementFromPoint(centerX, centerY).dispatchEvent(mouseDownEvent);
      }, 1);
    });
  }

  const n = setInterval(e, 1);
})();
